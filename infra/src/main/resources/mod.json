{
  "main": "org.entcore.infra.Starter",
  "port": 8001,
  "mode": "dev",
  "auto-redeploy": true,
  "scripts-folder" : "../../data/tests/scripts",
  "path-prefix": "infra",
  "app-registry": {
    "name": "org.entcore~app-registry~1.7-SNAPSHOT",
    "config": {
		"main":"org.entcore.registry.AppRegistry",
		"auto-redeploy": false,
		"port" : 8012,
		"address" : "wse.app.registry",
		"mode": "dev"
    }
  },
  "neo4j-persistor": {
    "name": "com.wse.neo4j~neo4jPersistor~1.2.4",
    "config": {
      "worker": true,
      "address": "wse.neo4j.persistor",
      "datastore-path": "./data/tests/neo4j",
      "neo4j" : {
      	"node_auto_indexing" : "true",
      	"node_keys_indexable" : "externalId"
      }
    }
  },
  "one-modules": [
    {
      "name": "org.entcore~auth~1.7-SNAPSHOT",
      "config": {
        "authenticationServer": {
          "loginURL": "http://localhost:8090/auth/login",
          "logoutURL": "http://localhost:8090/auth/logout",
          "loginCallback": "http://localhost:8090/welcome",
          "logoutCallback": "http://localhost:8090/welcome"
        },
        "host": "http://localhost:8090"
      }
    },
    {
      "name": "org.entcore~directory~1.7-SNAPSHOT",
      "config": {
        "host": "http://localhost:8090"
      }
    },
    {
      "name": "org.entcore~history~1.7-SNAPSHOT"
    },
    {
      "name": "org.entcore~workspace~1.7-SNAPSHOT",
      "config": {
        "host": "http://localhost:8090",
        "userbook-host": "http://localhost:8090",
        "app-name": "Espace documentaire",
        "app-address": "http://localhost:8090/workspace/workspace"
      }
    },
    {
      "name": "org.entcore~session~1.7-SNAPSHOT"
    },
    {
      "name": "org.entcore~communication~1.7-SNAPSHOT"
    },
    {
      "name": "org.entcore~portal~1.7-SNAPSHOT",
      "config": {
        "urls": {
          "timeline": "http://localhost:8090/timeline",
          "userbook": "http://localhost:8090/userbook",
          "auth": "http://localhost:8090/auth",
          "portal": "http://localhost:8090",
          "logoutCallback": "http%3A%2F%2Flocalhost%3A8090"
        },
		"admin-urls": [
			{"name": "directory", "url": "http://localhost:8090/directory"},
			{"name": "history", "url": "http://localhost:8090/history"},
			{"name": "appRegistry", "url": "http://localhost:8090/appregistry"},
			{"name": "communication", "url": "http://localhost:8090/communication"}
		],
		  "widgets": [
			  {
				  "name": "calendar",
				  "path": "/public/template/calendar.html",
				  "js": "/public/js/calendar.js"
			  }, {
				  "name": "lastMails",
				  "path": "/conversation/public/template/last-mails-widget.html",
				  "js": "/conversation/public/js/last-mails-widget.js",
				  "i18n": "/conversation/i18n"
			  }
		  ]
      }
    },
    {
      "name": "org.entcore~conversation~1.7-SNAPSHOT",
      "config": {
        "host": "http://localhost:8090",
        "userbook-host": "http://localhost:8090",
        "app-address": "http://localhost:8090/conversation/conversation"
      }
    },
	{
	  "name": "org.entcore~feeder~1.7-SNAPSHOT",
	  "config": {
	  }
    }
  ],
  "external-modules": [
    {
      "name": "io.vertx~mod-mongo-persistor~2.0.1-final-WSE",
      "config": {
        "address": "wse.mongodb.persistor",
        "host": "localhost",
        "port": 27017,
        "db_name": "one_tests",
        "pool_size": 10
      }
    },
    {
      "name": "com.wse~gridfs-persistor~1.0.0",
      "config": {
        "address": "wse.gridfs.persistor",
        "host": "localhost",
        "port": 27017,
        "db_name": "one_tests",
        "pool_size": 10
      }
    },

    {
      "name": "io.vertx~mod-mailer~2.0.0-final",
      "config": {
        "address": "wse.email",
        "content_type": "text/html"
      }
    },
    {
      "name": "com.wse~mod-image-resizer~1.0.1",
      "config": {
        "address": "wse.image.resizer",
        "gridfs": {
          "host": "localhost",
          "port": 27017,
          "db_name": "one_tests",
          "pool_size": 10
        }
      }
    },
    {
      "name": "com.wse~http-proxy~1.0.0",
      "config": {
        "port": 8090,
        "proxies": [
          {
            "location": "/",
            "proxy_pass": "http://localhost:8017"
          },
          {
            "location": "/infra",
            "proxy_pass": "http://localhost:8001"
          },
          {
            "location": "/directory",
            "proxy_pass": "http://localhost:8003"
          },
          {
            "location": "/history",
            "proxy_pass": "http://localhost:8006"
          },
          {
            "location": "/auth",
            "proxy_pass": "http://localhost:8009"
          },
          {
            "location": "/workspace",
            "proxy_pass": "http://localhost:8011"
          },
          {
            "location": "/appregistry",
            "proxy_pass": "http://localhost:8012"
          },
          {
            "location": "/communication",
            "proxy_pass": "http://localhost:8015"
          },
          {
            "location": "/userbook",
            "proxy_pass": "http://localhost:8003"
          },
          {
            "location": "/conversation",
            "proxy_pass": "http://localhost:8019"
          }
        ]
      }
    },
    {
      "name": "com.wse.tracer~tracer~1.0.0",
      "config": {
        "logger-name": "one.tracer",
        "log-path": "/opt/one/history/",
        "address": "log.address"
      }
    }
  ]
}
